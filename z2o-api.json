{
  "openapi": "3.0.2",
  "info": {
    "title": "Z2O API",
    "description": "Implements a web application to connect company ERPs to Banks enabling them to track required accounts and transfer data for financial purposes. The api provides endpoints to utilise the functionalities of the product. The api service is exhaustive and provides a base for building of 3rd party web applications.",
    "version": "v0.1"
  },
  "tags":[
    {
      "name": "Bank - Auth",
      "description": "Manages authentication for banks. Includes registration and login."
    },
    {
      "name": "Bank - Companies",
      "description": "These routes control the operations on companies associated with a bank."
    }
  ],
  "paths": {
    "/bank/register": {
      "post": {
        "tags": [
          "Bank - Auth"
        ],
        "summary": "Register a new bank",
        "description": "A bank is allowed to register on our platform to avail our services. An account will be created for the bank and it can now perform the other use cases mentioned below.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Z2O.Models.Bank.Bank"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Z2O.Models.Bank.BankDisplay"
                }
              }
            }
          }
        }
      }
    },
    "/bank/auth": {
      "post": {
        "tags": [
          "Bank - Auth"
        ],
        "summary": "Get API Key for your bank",
        "description": "After registration the bank can now login into its account to manage its work.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Z2O.Models.Bank.BankLogin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Z2O.Models.Bank.BankAuth"
                }
              }
            }
          }
        }
      }
    },
    "/bank/companies": {
      "get": {
        "tags": [
          "Bank - Companies"
        ],
        "summary": "Get list of companies connected to bank",
        "description": "This use case provides a Bank to view the Companies associated with it. A company is said to be associated with a bank when the bank is the one which adds the company. A bank is said to be associated with a company, if the company was added by the bank.",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Z2O.Models.Company.CompanyList"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Bank - Companies"
        ],
        "summary": "Add a new company",
        "description": "After logging in, a bank can now ‘Add Company’ whose data it needs to monitor. This creates a Company with the given details. The id, password will be sent to the company through mail enabling the company to login into the product.",
