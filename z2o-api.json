          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Z2O.Models.Company.CompanyAdd"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Z2O.Models.Company.CompanyDisplay"
                }
              }
            }
          }
        }
      }
    },
