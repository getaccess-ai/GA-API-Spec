                  ">180 Days": {
                    "type": "string",
                    "description": "The value of Payables after 180 days"
                  },
                  "Total": {
                    "type": "string",
                    "description": "The total payables value"
                  }
                }
              }
            }
          }
        }
      },
      "Statement of Debtors / Receivables": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "S.No.": {
              "type": "string",
              "description": "The order number of the row"
            },
            "Particulars": {
              "type": "string",
